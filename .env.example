# LiquidUI Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://quant:your_password_here@localhost:5432/quant_db
POSTGRES_USER=quant
POSTGRES_PASSWORD=changeme_strong_password
POSTGRES_DB=quant_db

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ============================================================================
# Market Data API Keys
# ============================================================================
# Alpaca (Paper Trading)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Polygon.io
POLYGON_API_KEY=your_polygon_key_here

# IEX Cloud
IEX_API_KEY=your_iex_key_here

# ============================================================================
# Airflow Configuration
# ============================================================================
AIRFLOW__CORE__FERNET_KEY=generate_with_python_cryptography_fernet
AIRFLOW__CORE__EXECUTOR=CeleryExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__SECRET_KEY=generate_random_secret_key
AIRFLOW_UID=50000

# ============================================================================
# Monitoring & Observability
# ============================================================================
# Grafana
GRAFANA_PASSWORD=admin_password_here

# Prometheus
PROMETHEUS_PORT=9090

# Sentry (Error Tracking)
SENTRY_DSN=

# ============================================================================
# Notification Services
# ============================================================================
# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=noreply@yourdomain.com

# Slack Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#trading-alerts

# Twilio (SMS Alerts)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
ALERT_PHONE_NUMBER=

# ============================================================================
# MLflow / Experiment Tracking
# ============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ARTIFACT_ROOT=s3://your-bucket/mlflow-artifacts
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ============================================================================
# Risk Management
# ============================================================================
MAX_DAILY_LOSS=-10000
MAX_DRAWDOWN_PCT=-0.10
MAX_POSITION_SIZE=100000
MAX_LEVERAGE=1.5

# ============================================================================
# Trading Configuration
# ============================================================================
INITIAL_CAPITAL=100000
COMMISSION_PCT=0.001
SPREAD_PCT=0.0005
SLIPPAGE_PCT=0.0002

# Symbols to trade (comma-separated)
TRADING_SYMBOLS=AAPL,GOOGL,MSFT,AMZN,TSLA

# ============================================================================
# Security
# ============================================================================
# JWT Secret for API authentication
JWT_SECRET_KEY=generate_strong_random_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Rate Limiting
API_RATE_LIMIT=100  # requests per minute

# ============================================================================
# Backup & Storage
# ============================================================================
# AWS S3 for data backup
S3_BUCKET_NAME=your-bucket-name
S3_REGION=us-east-1

# Local backup directory
BACKUP_DIR=/path/to/backups

# ============================================================================
# Development Tools
# ============================================================================
# Jupyter
JUPYTER_TOKEN=your_jupyter_token_here
JUPYTER_PORT=8888

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_LIVE_TRADING=false
ENABLE_PAPER_TRADING=true
ENABLE_BACKTESTING=true
ENABLE_RISK_CHECKS=true
ENABLE_KILL_SWITCH=true

# ============================================================================
# Performance Tuning
# ============================================================================
MAX_WORKERS=4
CELERY_WORKER_CONCURRENCY=4
BACKTEST_CHUNK_SIZE=10000

# ============================================================================
# Logging & Audit
# ============================================================================
LOG_FILE_PATH=/app/logs
AUDIT_LOG_PATH=/app/logs/audit
LOG_ROTATION_DAYS=30
LOG_MAX_BYTES=10485760  # 10MB

# ============================================================================
# Notes
# ============================================================================
# How to generate Fernet key:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
#
# How to generate random secret key:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# Remember to:
# 1. Never commit this file with real values
# 2. Use strong, unique passwords for each service
# 3. Rotate keys regularly in production
# 4. Use a secrets manager (AWS Secrets Manager, HashiCorp Vault) in production
